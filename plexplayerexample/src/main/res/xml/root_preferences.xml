<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/defaults_header">

        <EditTextPreference
            app:key="@string/plex_port"
            app:title="@string/plexamp_port"
            app:summary="Enter your Port"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/plex_status">

        <SwitchPreferenceCompat
            app:key="plex_linked"
            app:summaryOff="@string/link_off_message"
            app:summaryOn="@string/link_on_message"
            app:title="@string/link_plex_to_app" />

    </PreferenceCategory>

</PreferenceScreen>